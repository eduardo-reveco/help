<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/teayudo2049/image/upload/c_thumb,w_200,g_face/v1631022787/Te_ayudo-logos_black_ubbdtu.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Crea un servicio", new_service_path, class: "btn btn-sm btn-outline-secondary mr-4 mt-1  color-white" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Ver todos los servicios", services_path, class: "btn btn-sm btn-outline-secondary mr-4 mt-1 color-white" %>
        </li>
        <li class="nav-item dropdown special-img-user">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://res.cloudinary.com/teayudo2049/image/upload/v1631022808/Te_ayudo-logos_transparent_vifzt3.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Mi perfil", profile_path, class: "dropdown-item" %>
            <%= link_to "Editar perfil", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Salir", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Ingresar", new_user_session_path, class: "btn btn-sm btn-outline-secondary mr-4 mt-1  color-white" %>
          <%= link_to "Crea tu usuario", new_user_registration_path, class: "btn btn-sm btn-outline-secondary mr-4 mt-1  color-white" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
