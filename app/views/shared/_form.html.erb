<div class="container">
  <%= simple_form_for @service do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" }%>
      <%= f.input :price,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "price" }%>
      <%= f.input :description,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "description" }%>
    
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Publicar" %>
    </div>
  <% end %>
  <%= link_to 'Home', root_path %>
</div>


