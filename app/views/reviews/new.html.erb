<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>

<div class="container">
  <%= simple_form_for @review do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :description,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Descripcion" }%>
      <%= f.input :rating,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Rating" }%>

    </div>
    <div class="form-actions">
      <%= f.button :submit, "Publicar" %>
    </div>
  <% end %>
  <%= link_to 'Home', root_path %>
</div>
