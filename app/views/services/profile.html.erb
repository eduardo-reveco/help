
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/teayudo2049/image/upload/v1631127364/index_-logo_cwwpjh.jpg);">
  <div class="container">
    <h1> <strong>Mis servicios</strong> </h1>
  </div>
</div>
<div class="container">
  <% @my_services.each do |service| %>
    <div class="card-product mt-3">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos row">
        <div>
          <h2><%= service.name %></h2>
          <p><%= service.description %></p>
          <p><strong>$ <%= service.price %></strong></p>
        </div>
        <div>
          <%= link_to 'Dar de baja el servicio', service_path(service), method: :delete, data: { confirm: "Estas seguro de querer borrar este servicio?"}, class:"btn btn-primary"%>
        </div>
        
      </div>
    </div>
  <% end %>
</div>
