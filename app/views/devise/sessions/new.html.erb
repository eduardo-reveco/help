<div class="container mt-5">
  <h2 class="mt-5">Inicia sesión</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs mt-4">
      <%= f.input :email,
                  label: "Ingresa tu correo electrónico",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: "Ingresa tu contraseña",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Recuérdame", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Iniciar", class:"btn btn-primary new-user-btn mb-2 mt-3"%>
    </div>
  <% end %>
    

  <%= render "devise/shared/links" %> 
</div>